<Window x:Class="RetroHub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RetroHub - Game Library" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15">
            <Grid>
                <TextBlock Text="RetroHub Game Library" 
                           Foreground="White" 
                           FontSize="20" 
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
                <Button Content="+ Add Game" 
                        HorizontalAlignment="Right"
                        Width="120" 
                        Height="40"
                        FontSize="14"
                        FontWeight="Bold"
                        Click="AddGame_Click"/>
            </Grid>
        </Border>

        <!-- Game List -->
        <ListView x:Name="GameList" 
                  Grid.Row="1" 
                  MouseDoubleClick="GameList_DoubleClick"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  Background="#ECF0F1"
                  BorderThickness="0">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Width="180" 
                            Height="240" 
                            Background="White" 
                            Margin="10"
                            CornerRadius="8"
                            BorderBrush="#BDC3C7"
                            BorderThickness="1">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" 
                                              ShadowDepth="2" 
                                              Opacity="0.3"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Icon -->
                            <Grid Grid.Row="0" Background="#34495E">
                                <Image Source="{Binding IconPath}" 
                                       Stretch="Uniform"
                                       Margin="20"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center">
                                    <Image.Style>
                                        <Style TargetType="Image">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IconPath}" Value="">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                </Image>

                                <!-- Fallback icon when no image -->
                                <TextBlock Text="🎮" 
                                           FontSize="60"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Foreground="#95A5A6">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IconPath}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>

                            <!-- Game Title -->
                            <Border Grid.Row="1" 
                                    Background="#2C3E50" 
                                    Padding="10">
                                <TextBlock Text="{Binding Title}" 
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           TextAlignment="Center"
                                           TextWrapping="Wrap"
                                           TextTrimming="CharacterEllipsis"
                                           MaxHeight="50"/>
                            </Border>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <ContentPresenter/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Cursor" Value="Hand"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
    </Grid>
</Window>