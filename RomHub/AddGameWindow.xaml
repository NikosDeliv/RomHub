<Window x:Class="RomHub.AddGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Game" Height="400" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <Label Content="Game Title:" FontSize="14" FontWeight="Bold"/>
            <Grid>
                <TextBox x:Name="TitleBox" Height="30" FontSize="14"/>
                <TextBlock Text="Enter the name of your game..." 
                           FontSize="14" 
                           Foreground="Gray" 
                           VerticalAlignment="Center"
                           Margin="5,0,0,0"
                           IsHitTestVisible="False">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=TitleBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </StackPanel>

        <!-- ROM Path -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <Label Content="ROM File:" FontSize="14" FontWeight="Bold"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <TextBox x:Name="RomBox" Height="30" FontSize="12" 
                             AllowDrop="True" 
                             PreviewDragOver="TextBox_DragOver"
                             Drop="RomBox_Drop"
                             Background="#F5F5F5"/>
                    <TextBlock Text="Browse or drag &amp; drop ROM file here..." 
                               FontSize="11" 
                               Foreground="Gray" 
                               VerticalAlignment="Center"
                               Margin="5,0,0,0"
                               IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=RomBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
                <Button Grid.Column="1" Content="Browse..." Width="80" Margin="5,0,0,0"
                        Click="BrowseRom_Click" Height="30"/>
            </Grid>
        </StackPanel>

        <!-- Emulator Path -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <Label Content="Emulator:" FontSize="14" FontWeight="Bold"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <TextBox x:Name="EmuBox" Height="30" FontSize="12"
                             AllowDrop="True"
                             PreviewDragOver="TextBox_DragOver"
                             Drop="EmuBox_Drop"
                             Background="#F5F5F5"/>
                    <TextBlock Text="Browse or drag &amp; drop emulator .exe here..." 
                               FontSize="11" 
                               Foreground="Gray" 
                               VerticalAlignment="Center"
                               Margin="5,0,0,0"
                               IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=EmuBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
                <Button Grid.Column="1" Content="Browse..." Width="80" Margin="5,0,0,0"
                        Click="BrowseEmu_Click" Height="30"/>
            </Grid>
        </StackPanel>

        <!-- Icon Path -->
        <StackPanel Grid.Row="3" Margin="0,0,0,15">
            <Label Content="Icon (Optional):" FontSize="14" FontWeight="Bold"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <TextBox x:Name="IconBox" Height="30" FontSize="12"
                             AllowDrop="True"
                             PreviewDragOver="TextBox_DragOver"
                             Drop="IconBox_Drop"
                             Background="#F5F5F5"/>
                    <TextBlock Text="Browse or drag &amp; drop icon image here..." 
                               FontSize="11" 
                               Foreground="Gray" 
                               VerticalAlignment="Center"
                               Margin="5,0,0,0"
                               IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=IconBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
                <Button Grid.Column="1" Content="Browse..." Width="80" Margin="5,0,0,0"
                        Click="BrowseIcon_Click" Height="30"/>
            </Grid>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Width="100" Height="35" Margin="0,10,10,10" 
                    Click="Cancel_Click" FontSize="14"/>
            <Button Content="Add Game" Width="100" Height="35" 
                    Click="Add_Click" FontSize="14" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>